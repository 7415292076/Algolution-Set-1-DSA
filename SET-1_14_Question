/*
14.	write a function in C to print following pattern 
Note: Number of rows and columns shall be the input parameters to the function

12345
54321
12345
54321
12345
*/

#include<iostream>
using namespace std;

class song
{
public:
   
    
    void show5()
    {
    for(int i=1; i<=5; i++)
    {
     if(i%2==0)
     {
          for(int i=5; i>=1; i--)
          {
          cout<<i;
          }
          cout << "" << endl;
     }
     else
     {
     for(int i=1; i<=5; i++)
          {
          cout<<i;
          }
          cout << "" << endl;
     }
    }
    }
    
  

};
int main()
{
    song s;
    s.show5();
   
}
