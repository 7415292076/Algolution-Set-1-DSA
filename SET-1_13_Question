#include<iostream>
using namespace std;

class song
{
public:
    void show()
    {
        for(int i=0; i<10; i++)
        {
            if(i%2==0)
            {
            }
            else
            {
                for(int j=i-1; j<8; j++)
                {
                    cout<<" ";
                }
                for(int k=1; k<=i; k++)
                {
                    cout<<"*";
                }

                cout<<"\n";
            }


        }

        for(int i=0; i<10; i++)
        {
            if(i%2==0)
            {
            }
            else
            {
                for(int j=0; j<=i; j++)
                {
                    cout<<" ";
                }
                for(int k=8; k>i; k--)
                {
                    cout<<"*";
                }

                cout<<"\n";
            }


        }

    }

   
};
int main()
{
    song s;
    s.show();
}
