#include<iostream>
using namespace std;

class song
{
public:
   
    void show2()
    {
        for(int i=0; i<10; i++)
        {

            for(int k=1; k<i; k++)
            {
                cout<<"*";
            }

            cout<<"\n";
        }

        for(int i=0; i<10; i++)
        {

            for(int k=7; k>i; k--)
            {
                cout<<"*";
            }

            cout<<"\n";



        }
    }

   
};
int main()
{
    song s;  
    s.show2(); 
}
